{
	"manifest_version": 2,
	"name": "Youtube Remember",
	"version": "2.0",
  
	"description": "When pausing a Youtube video, it will change the URL to be for the specific time when you paused the video, allowing you to continue watching later, even after restarting the browser",
	
	"icons": {
		"48": "icons/48.png",
		"96": "icons/96.png",
		"256": "icons/256.png"
	},

	"permissions": ["storage"],

	"options_ui": {
    	"page": "options.html",
    	"open_in_tab": false
	},

	"browser_action": {
		"default_popup": "options.html"
	},

	"content_scripts": [
	  {
		"matches": ["*://*.youtube.com/*"],
		"js": ["youtube.js"]
	  }
	],

	
	"browser_specific_settings": {
  		"gecko": {
   	 		"id": "youtuberemember@ridiche.me"
  		}
	}
  }
  